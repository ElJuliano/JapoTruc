<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lost_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="perso.shit.bull.julien.japotruc.LostScreen">

    <TextView
        android:text="You are  a loser, would you like to try again ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teasing"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="back to menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButtonLost"
        android:onClick="switchToWelcome"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Try again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tryAgainButton"
        android:onClick="switchToGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/backButtonLost" />

    <Button
        android:text="High score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toHighScore"
        android:layout_alignBaseline="@+id/tryAgainButton"
        android:layout_alignBottom="@+id/tryAgainButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Your score was :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_below="@+id/teasing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/scoreTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:text="Not bad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/conditionalText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="30sp" />

</RelativeLayout>
